<section class="relative z-0 mx-auto max-w-7xl px-6 py-10 sm:px-16 sm:py-16">
  <div class="flex flex-col gap-10 overflow-hidden xl:mt-12 xl:flex-row">
    <div class="bg-black-100-light dark:bg-black-100-dark flex-1 rounded-2xl p-8">
      <h3 class="xs:text-[40px] text-[30px] font-black text-black sm:text-[50px] md:text-[60px] dark:text-white">
        Contact
      </h3>
      <form class="mt-12 flex flex-col gap-8">
        <label class="flex flex-col">
          <span class="mb-4 font-medium text-black dark:text-white">Your Name</span>
          <input
            type="text"
            name="name"
            placeholder="What's your name?"
            class="bg-tertiary-light dark:bg-tertiary-dark dark:placeholder:text-secondary-dark rounded-lg border-none px-6 py-4 font-medium text-black outline-none placeholder:text-gray-500 dark:text-white"
          />
        </label>
        <label class="flex flex-col">
          <span class="mb-4 font-medium text-black dark:text-white">Your email</span>
          <input
            type="email"
            name="email"
            placeholder="What's your email?"
            class="bg-tertiary-light dark:bg-tertiary-dark dark:placeholder:text-secondary-dark rounded-lg border-none px-6 py-4 font-medium text-black outline-none placeholder:text-gray-500 dark:text-white"
          />
        </label>
        <label class="flex flex-col">
          <span class="mb-4 font-medium text-black dark:text-white">Your Message</span>
          <textarea
            rows="7"
            name="message"
            placeholder="What you want to say?"
            class="bg-tertiary-light dark:bg-tertiary-dark dark:placeholder:text-secondary-dark rounded-lg border-none px-6 py-4 font-medium text-black outline-none placeholder:text-gray-500 dark:text-white"
          ></textarea>
        </label>

        <button
          type="submit"
          class="bg-tertiary-light dark:bg-tertiary-dark shadow-primary w-fit rounded-xl px-8 py-3 font-bold text-black shadow-md outline-none dark:text-white"
        >
          Send
        </button>
      </form>
    </div>
  </div>
</section>
